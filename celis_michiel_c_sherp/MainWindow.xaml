<Window x:Class="celis_michiel_c_sherp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:celis_michiel_c_sherp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" ResizeMode="NoResize" MinHeight="500" MinWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/res/background.jpeg" />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 1 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400px"/>
                <ColumnDefinition Width="400px"/>
            </Grid.ColumnDefinitions>

            <!-- Building Place -->
            <Grid Grid.Column="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!-- Add your 4x4 grid content here -->
            </Grid>

            <!-- Cookie Image -->
            <Grid Grid.Column="1" Margin="20">
                <Image x:Name="CookieImage" Source="/res/cookie.png"/>
                <Border Grid.Column="1" CornerRadius="10" Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" Padding="10">
                    <TextBlock x:Name="CookieCounter" Text="0" MinWidth="100px" TextAlignment="Center"/>
                </Border>
            </Grid>

        </Grid>

        <!-- Bottom Row -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Menu Area -->
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100px"/>
                    <ColumnDefinition Width="100px"/>
                    <ColumnDefinition Width="100px"/>
                    <ColumnDefinition Width="100px"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="Upgrades" Height="100px"/>
                <Button Grid.Column="2" Content="Power-ups" Height="100px"/>
                <Button Grid.Column="3" Content="Achievements" Height="100px"/>
                <Button Grid.Column="4" Content="level" Height="100px"/>
            </Grid>
        </Grid>
    </Grid>
</Window>